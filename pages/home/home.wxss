/* pages/home/home.wxss */

.home-container {
  position: relative;
  padding-bottom: 40rpx;
}

/* 去除大背景，改为白色卡片样式 */
.header-bg{display:none}

/* 1. 用户信息头部 */
.header-section {
  background: var(--bg-primary);
  padding: 32rpx;
  border-bottom: 1rpx solid var(--border-light);
}

.user-info {
  display: flex;
  align-items: center;
}

.user-info__avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.user-info__details {
  display: flex;
  flex-direction: column;
}

.user-info__nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.user-info__level {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.user-info__level-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 2. 今日学习概览卡片 */
.stats-card {
  position: relative;
  z-index: 1;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.card-header__title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
}

.card-header__icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.card-header__action {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: var(--text-secondary);
}

.stats-card__grid {
  display: flex;
  justify-content: space-around;
  text-align: center;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-item__value {
  font-size: 40rpx;
  font-weight: bold;
}

.stat-item__label {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 3. 快捷操作 */
.actions-section {
  padding: 0 24rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-top: 24rpx;
}

.action-item {
  padding: 32rpx;
  border-radius: 48rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  height: 280rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.action-item:active {transform: translateY(-8rpx);box-shadow:0 12rpx 32rpx rgba(0,0,0,0.12);}

.action-item__text {
  color: #FFFFFF;
  z-index: 1;
}

.action-item__title {
  font-size: 34rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.action-item__desc {
  font-size: 22rpx;
  margin-top: 8rpx;
  color: #FFFFFF;
  opacity: 0.9;
}

.action-item__icon {
  position: absolute;
  right: -20rpx;
  bottom: -20rpx;
  width: 120rpx;
  height: 120rpx;
  opacity: 0.8;
  z-index: 0;
}

/* 4. 空状态/内容区 */
.loading-placeholder {
  margin-top: 24rpx;
}

.empty-state {
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 60rpx 40rpx;
}

.empty-state__image {
  width: 300rpx;
  margin-bottom: 32rpx;
}

.empty-state__title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
}

.empty-state__desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-top: 16rpx;
  margin-bottom: 40rpx;
}

.empty-state__btn .van-button__text {
  display: flex;
  align-items: center;
}

.empty-state__btn .van-icon {
  margin-right: 8rpx;
}

/* 文字颜色类 */
.text-primary .stat-number {
  color: var(--primary-color);
}

.text-warning .stat-number {
  color: var(--warning-color);
}

.text-success .stat-number {
  color: var(--success-color);
}

.text-info .stat-number {
  color: var(--info-color);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .stats-grid {
    gap: var(--space-sm);
  }
  
  .stat-number {
    font-size: var(--font-xl);
  }
  
  .empty-actions {
    flex-direction: column;
    align-items: center;
  }
  
  .empty-btn {
    min-width: 240rpx;
  }
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .page-container {
    background: linear-gradient(135deg, #2D3748 0%, #4A5568 100%);
  }
  
  .review-card {
    background: linear-gradient(135deg, #2D3748 0%, #4A5568 100%);
    border-color: var(--warning-color);
  }
  
  .review-title {
    color: var(--warning-color);
  }
  
  .review-desc {
    color: var(--text-secondary);
  }
}

/* overview section */
.overview-section{padding:0 48rpx 0 48rpx;margin-top:24rpx}
.overview-header{display:flex;justify-content:space-between;align-items:center;margin-bottom:32rpx}
.overview-title{display:flex;align-items:center;font-size:32rpx;font-weight:600;color:var(--text-primary)}
.title-decorator{width:8rpx;height:32rpx;background:var(--primary-color);border-radius:4rpx;margin-right:16rpx}
.overview-btn{color:var(--primary-color)!important;border-color:var(--primary-color-light)!important;border-radius:32rpx!important;font-size:24rpx!important;padding:0 24rpx!important}

/* stats grid */
.stats-grid{display:grid;grid-template-columns:repeat(4,1fr);gap:24rpx;margin-bottom:48rpx}
.stat-value{font-size:40rpx;font-weight:700;margin-bottom:8rpx}
.stat-label{font-size:24rpx;color:var(--text-secondary)}
.text-blue{color:#3B82F6}
.text-orange{color:#F97316}
.text-green{color:#10B981}
.text-purple{color:#8B5CF6}

/* remove old card styles previously used */
.stats-card,.card-header{display:none}
.stats-card__grid{display:none}

.action-icon-wrapper{width:96rpx;height:96rpx;background:rgba(255,255,255,0.2);border-radius:36rpx;display:flex;align-items:center;justify-content:center;box-shadow:0 4rpx 8rpx rgba(0,0,0,0.08)}
.action-icon{width:48rpx;height:48rpx;filter:invert(1) brightness(2)}
.action-item__icon{display:none}

/* 4. 智能推荐 */
.recommendation-section {
  padding: 0 24rpx;
  margin-top: 40rpx;
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-left: 24rpx;
}

.recommendation-loading {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.recommendation-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.recommendation-cards {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.recommendation-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  border-left: 8rpx solid #4F46E5;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.recommendation-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.12);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.card-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.card-icon .icon-img {
  width: 32rpx;
  height: 32rpx;
  filter: invert(1) brightness(2);
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.card-description {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.card-urgency {
  margin-top: 16rpx;
}

.urgency-bar {
  width: 100%;
  height: 6rpx;
  background: #F3F4F6;
  border-radius: 3rpx;
  overflow: hidden;
}

.urgency-fill {
  height: 100%;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

.learning-tips {
  background: #F8FAFC;
  border-radius: 24rpx;
  padding: 32rpx;
  border: 2rpx solid #E5E7EB;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
}

.tip-item {
  margin-bottom: 12rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.6;
}

.tip-text::before {
  content: "• ";
  color: #4F46E5;
  font-weight: bold;
  margin-right: 8rpx;
}

/* 5. 复习提醒 */
.review-reminder-section {
  padding: 0 24rpx;
  margin-top: 40rpx;
}

.reminder-loading {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.reminder-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.reminder-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  border-left: 8rpx solid #4F46E5;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.reminder-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.12);
}

.reminder-header {
  display: flex;
  align-items: center;
}

.reminder-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.reminder-info {
  flex: 1;
  margin-right: 16rpx;
}

.reminder-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.reminder-message {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

.reminder-count {
  flex-shrink: 0;
}

.count-number {
  background: linear-gradient(135deg, #FF6B6B, #4ECDC4);
  color: #fff;
  font-size: 24rpx;
  font-weight: 700;
  padding: 12rpx 20rpx;
  border-radius: 32rpx;
  min-width: 48rpx;
  text-align: center;
  display: inline-block;
}

.today-plan-summary {
  background: #F8FAFC;
  border-radius: 20rpx;
  padding: 24rpx;
  border: 2rpx solid #E2E8F0;
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.plan-title {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.plan-time {
  font-size: 22rpx;
  color: var(--text-secondary);
  background: #fff;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.plan-subjects {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.subject-chip {
  background: #fff;
  border: 2rpx solid #E2E8F0;
  border-radius: 16rpx;
  padding: 8rpx 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
}

.subject-name {
  color: var(--text-primary);
}

.subject-count {
  background: #4F46E5;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  min-width: 32rpx;
  text-align: center;
} 