/* pages/mistakes/detail.wxss */
.detail-container {
  padding: 24rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.loading-wrapper {
  padding-top: 200rpx;
  text-align: center;
}

.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

.card-header-icon {
  margin-right: 16rpx;
  color: var(--primary-color);
}

.question-stem {
  font-size: 32rpx;
  line-height: 1.7;
  color: var(--text-primary);
  word-break: break-all;
}

.question-image {
  width: 100%;
  margin-top: 24rpx;
  border-radius: 8rpx;
}

.answer-label, .analysis-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.answer-text, .analysis-text {
  font-size: 32rpx;
  line-height: 1.7;
  color: var(--text-primary);
}

.analysis-content {
  margin-top: 24rpx;
}

.van-cell-group--inset {
  margin: 0 !important;
}

.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding: 24rpx;
  padding-bottom: calc(24rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background-color: #ffffff;
  border-top: 1rpx solid #ebedf0;
}

.action-btn {
  flex: 1;
}

.action-btn:not(:last-child) {
  margin-right: 12rpx;
} 