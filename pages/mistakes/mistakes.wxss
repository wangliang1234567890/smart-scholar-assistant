/* pages/mistakes/mistakes.wxss */

.mistakes-container {
  background: #f8f9fa;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 50rpx 0 30rpx;
  background: white;
}

.page-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

/* 统计数据区域 */
.stats-section {
  background: white;
  padding: 40rpx 30rpx;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
}

.stat-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.blue-bg {
  background: #6366f1;
}

.red-bg {
  background: #ef4444;
}

.orange-bg {
  background: #f97316;
}

.green-bg {
  background: #22c55e;
}

.stat-icon-img {
  width: 24rpx;
  height: 24rpx;
  filter: brightness(0) invert(1);
}

.stat-icon-text {
  font-size: 20rpx;
  font-weight: 600;
  color: white;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.2;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #6b7280;
  font-weight: 400;
}

/* 查看详细分析 */
.analysis-section {
  background: white;
  padding: 0 30rpx 30rpx;
  display: flex;
  justify-content: center;
}

.analysis-link {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 0;
}

.analysis-text {
  font-size: 26rpx;
  color: #4285f4;
  font-weight: 500;
}

/* 搜索区域 */
.search-section {
  background: white;
  padding: 30rpx;
  margin-top: 16rpx;
}

.search-field {
  background: #f3f4f6 !important;
  border-radius: 20rpx !important;
  border: none !important;
}

.search-input {
  font-size: 26rpx !important;
  color: #6b7280 !important;
}

/* 筛选标签 */
.filter-section {
  background: white;
  padding: 0 30rpx 30rpx;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-content {
  display: inline-flex;
  gap: 12rpx;
  padding-bottom: 6rpx;
}

.filter-chip {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 18rpx;
  background: #f3f4f6;
  border-radius: 18rpx;
  font-size: 24rpx;
  color: #6b7280;
  white-space: nowrap;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
  font-weight: 500;
}

.filter-active {
  background: #3b82f6;
  color: white;
  border-color: #3b82f6;
}

.chip-icon {
  width: 20rpx;
  height: 20rpx;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.math-chip {
  background: #3b82f6;
}

.chinese-chip {
  background: #22c55e;
}

.english-chip {
  background: #8b5cf6;
}

.chip-icon-img {
  width: 16rpx;
  height: 16rpx;
  filter: brightness(0) invert(1);
}

/* 错题列表区域 */
.list-section {
  padding: 30rpx;
  padding-top: 16rpx;
}

.loading-state {
  padding: 20rpx 0;
}

.mistake-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.mistake-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  transition: all 0.2s ease;
  border: 1rpx solid #f1f3f4;
}

.mistake-item:active {
  transform: scale(0.98);
  background: #f8f9fa;
}

/* 左侧图标 */
.mistake-icon {
  flex-shrink: 0;
}

.subject-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.math-icon {
  background: #6366f1;
}

.chinese-icon {
  background: #22c55e;
}

.english-icon {
  background: #8b5cf6;
}

.default-icon {
  background: #6b7280;
}

.subject-icon-img {
  width: 24rpx;
  height: 24rpx;
  filter: brightness(0) invert(1);
}

/* 右侧内容 */
.mistake-info {
  flex: 1;
  min-width: 0;
}

.mistake-title-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.mistake-question {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2937;
  line-height: 1.4;
  flex: 1;
  margin-right: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.mistake-actions {
  padding: 6rpx;
  margin: -6rpx;
  flex-shrink: 0;
}

.mistake-meta-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.difficulty-badge {
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.difficulty-badge.easy {
  background: #dcfce7;
  color: #15803d;
}

.difficulty-badge.medium {
  background: #fef3c7;
  color: #d97706;
}

.difficulty-badge.hard {
  background: #fee2e2;
  color: #dc2626;
}

.mistake-date {
  font-size: 22rpx;
  color: #9ca3af;
  font-weight: 400;
}

.mistake-review-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.review-count {
  font-size: 22rpx;
  color: #9ca3af;
  font-weight: 400;
}

/* 状态徽章 */
.status-badge {
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.status-badge.new {
  background: #fef3c7;
  color: #d97706;
}

.status-badge.reviewing {
  background: #dbeafe;
  color: #2563eb;
}

.status-badge.mastered {
  background: #dcfce7;
  color: #15803d;
}

/* 空状态 */
.empty-state {
  margin-top: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.empty-image {
  width: 240rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 32rpx;
}

.empty-btn {
  padding: 0 32rpx !important;
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .mistakes-container {
    background: #111827;
  }
  
  .page-header {
    background: #1f2937;
  }
  
  .page-title {
    color: #f9fafb;
  }
  
  .stats-section,
  .analysis-section,
  .search-section,
  .filter-section {
    background: #1f2937;
  }
  
  .stat-number {
    color: #f9fafb;
  }
  
  .stat-label {
    color: #9ca3af;
  }
  
  .mistake-item {
    background: #1f2937;
    border-color: #374151;
  }
  
  .mistake-question {
    color: #f9fafb;
  }
  
  .filter-chip {
    background: #374151;
    color: #d1d5db;
  }
  
  .filter-active {
    background: #3b82f6;
    color: white;
  }
}

/* 响应式设计 */
@media screen and (max-width: 375px) {
  .stats-section {
    padding: 32rpx 24rpx;
    gap: 16rpx;
  }
  
  .stat-icon {
    width: 56rpx;
    height: 56rpx;
  }
  
  .stat-icon-img {
    width: 20rpx;
    height: 20rpx;
  }
  
  .stat-number {
    font-size: 28rpx;
  }
  
  .search-section {
    padding: 24rpx;
  }
  
  .filter-section {
    padding: 0 24rpx 24rpx;
  }
  
  .list-section {
    padding: 24rpx;
  }
  
  .mistake-item {
    padding: 20rpx;
    gap: 16rpx;
  }
  
  .subject-icon {
    width: 56rpx;
    height: 56rpx;
  }
  
  .subject-icon-img {
    width: 20rpx;
    height: 20rpx;
  }
} 