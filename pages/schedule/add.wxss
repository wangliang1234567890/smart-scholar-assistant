/* pages/schedule/add.wxss */
.add-course-container {
  background: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 160rpx;
}

/* 表单样式 */
.form-section {
  background: #fff;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 32rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.required {
  color: #ff4d4f;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f8f9fa;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: #6366f1;
  background: #fff;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  background: #f8f9fa;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  box-sizing: border-box;
}

.form-textarea:focus {
  border-color: #6366f1;
  background: #fff;
}

/* 科目选择网格 */
.subject-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.subject-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  background: #fff;
  transition: all 0.3s;
  cursor: pointer;
}

.subject-item.active {
  border-color: #6366f1;
  background: #f0f1ff;
}

.subject-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.subject-icon.math {
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
}

.subject-icon.chinese {
  background: linear-gradient(135deg, #10b981, #059669);
}

.subject-icon.english {
  background: linear-gradient(135deg, #8b5cf6, #a855f7);
}

.subject-icon.science {
  background: linear-gradient(135deg, #f59e0b, #d97706);
}

.subject-icon.art {
  background: linear-gradient(135deg, #ec4899, #db2777);
}

.subject-icon.music {
  background: linear-gradient(135deg, #06b6d4, #0891b2);
}

.subject-text {
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
}

.subject-name {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.subject-item.active .subject-name {
  color: #6366f1;
  font-weight: 600;
}

/* 日期时间选择器 */
.date-picker,
.time-picker {
  height: 88rpx;
  background: #f8f9fa;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  cursor: pointer;
  transition: all 0.3s;
}

.date-picker:active,
.time-picker:active {
  background: #fff;
  border-color: #6366f1;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-text.placeholder {
  color: #999;
}

/* 时间行布局 */
.time-row {
  display: flex;
  gap: 16rpx;
}

.time-item {
  flex: 1;
}

/* 课程类型网格 */
.course-type-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.course-type-item {
  height: 88rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  cursor: pointer;
}

.course-type-item.active {
  border-color: #6366f1;
  background: #f0f1ff;
}

.course-type-name {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.course-type-item.active .course-type-name {
  color: #6366f1;
  font-weight: 600;
}

/* 设置项 */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
}

.setting-item:not(:last-child) {
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.setting-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.setting-icon.reminder {
  background: #fff7e6;
}

.setting-icon.repeat {
  background: #f6ffed;
}

.setting-info {
  flex: 1;
}

.setting-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.setting-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 开关样式调整 */
.form-section van-switch {
  transform: scale(0.9);
}

/* 底部保存按钮 */
.save-button-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 32rpx;
  padding-bottom: calc(32rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.save-button {
  height: 88rpx;
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  cursor: pointer;
  transition: all 0.3s;
}

.save-button:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #5856eb, #7c3aed);
}

.save-button text {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
} 