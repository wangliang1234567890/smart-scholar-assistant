/* pages/schedule/schedule.wxss */
.page-container {
  background: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 头部区域 */
.header-section {
  background: #fff;
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.header-icon {
  width: 48rpx;
  height: 48rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header-right van-button {
  padding: 0 24rpx;
  height: 64rpx;
}

/* 当前周信息 */
.week-info {
  background: #fff;
  padding: 16rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.week-text {
  font-size: 28rpx;
  color: #666;
}

/* 视图切换 */
.view-toggle {
  background: #fff;
  padding: 16rpx 32rpx;
  display: flex;
  gap: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.toggle-item {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 28rpx;
  text-align: center;
  transition: all 0.3s;
}

.toggle-item.active {
  background: #6366f1;
  color: #fff;
}

/* 周视图日历 */
.week-calendar {
  background: #fff;
  margin: 16rpx 32rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.week-header {
  display: flex;
  margin-bottom: 16rpx;
}

.week-day-header {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 0;
}

.week-dates {
  display: flex;
  gap: 8rpx;
}

.date-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 8rpx;
  border-radius: 12rpx;
  transition: all 0.3s;
  position: relative;
}

.date-item.today {
  background: #e0e7ff;
  color: #6366f1;
}

.date-item.selected {
  background: #6366f1;
  color: #fff;
}

.date-number {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.course-indicators {
  display: flex;
  gap: 4rpx;
  flex-wrap: wrap;
  justify-content: center;
}

.course-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #10b981;
}

.course-dot.math {
  background: #6366f1;
}

.course-dot.english {
  background: #10b981;
}

.course-dot.chinese {
  background: #f59e0b;
}

/* 今日课程 */
.today-section {
  margin: 16rpx 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.header-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #6366f1;
  font-size: 28rpx;
}

/* 课程列表 */
.course-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.course-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  gap: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.course-item:active {
  transform: scale(0.98);
}

.course-left {
  display: flex;
  align-items: flex-start;
}

.course-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight: 600;
  font-size: 28rpx;
}

.course-icon.math {
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
}

.course-icon.english {
  background: linear-gradient(135deg, #10b981, #059669);
}

.course-icon.chinese {
  background: linear-gradient(135deg, #f59e0b, #d97706);
}

.course-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.course-time,
.course-location,
.course-teacher {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #666;
}

.teacher-avatar {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
}

.course-note {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
  margin-top: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.course-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.course-type {
  font-size: 24rpx;
  color: #666;
  background: #f3f4f6;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.reminder-badge {
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 22rpx;
  color: #10b981;
  background: #ecfdf5;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

/* 空状态 */
.empty-state {
  background: #fff;
  border-radius: 16rpx;
  padding: 64rpx 32rpx;
  text-align: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.empty-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 32rpx;
  display: block;
  line-height: 1.5;
}

.empty-state van-button {
  width: 200rpx;
} 