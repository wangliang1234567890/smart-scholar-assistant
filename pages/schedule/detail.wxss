/* pages/schedule/detail.wxss */
.detail-container {
  background: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 320rpx; /* 大幅增加底部空间，确保内容可滑动 */
}

.loading-wrapper {
  padding-top: 200rpx;
  text-align: center;
}

/* 课程标题栏 */
.course-title-bar {
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.back-button,
.more-actions {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 课程基本信息卡片 */
.course-info-card {
  background: #fff;
  margin: 16rpx 32rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.course-header-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.course-subject-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.course-subject-icon.math {
  background: linear-gradient(135deg, #6366f1, #8b5cf6);
}

.course-subject-icon.english {
  background: linear-gradient(135deg, #10b981, #059669);
}

.course-subject-icon.chinese {
  background: linear-gradient(135deg, #f59e0b, #d97706);
}

.subject-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
}

.course-basic-info {
  flex: 1;
}

.course-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.course-subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 课程统计数据 */
.course-statistics {
  background: #fff;
  margin: 16rpx 32rpx;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.stat-box {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #6366f1;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 课程状态 */
.course-status-section {
  display: flex;
  justify-content: center;
  margin: 0 32rpx 16rpx;
}

.status-indicator {
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
}

.status-indicator.ongoing {
  background: #52c41a;
}

.status-indicator.completed {
  background: #6366f1;
}

.status-indicator.cancelled {
  background: #ff4d4f;
}

/* 通用样式 */
.course-details-section,
.course-description-section,
.homework-section,
.materials-section,
.reminder-section {
  background: #fff;
  margin: 16rpx 32rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

/* 课程详细信息 */
.detail-items {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.detail-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.calendar-icon {
  background: #6366f1;
}

.time-icon {
  background: #52c41a;
}

.location-icon {
  background: #faad14;
}

.teacher-icon {
  background: #8b5cf6;
}

.type-icon {
  background: #ff4d4f;
}

.detail-content {
  flex: 1;
}

.detail-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.detail-value {
  display: block;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

/* 课程描述 */
.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 课后作业 */
.homework-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.homework-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 12rpx 0;
}

.homework-status {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.homework-title {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  transition: all 0.3s;
}

.homework-title.completed {
  color: #999;
  text-decoration: line-through;
}

/* 所需材料 */
.materials-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.material-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx 16rpx;
  border: 1rpx solid #e5e7eb;
  transition: all 0.3s;
}

.material-item:active {
  background: #f0f0f0;
}

.material-content {
  text-align: center;
}

.material-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.material-type {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 提醒设置 */
.reminder-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8rpx 0;
}

.reminder-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.reminder-icon {
  width: 56rpx;
  height: 56rpx;
  background: #fff7e6;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.reminder-info {
  flex: 1;
}

.reminder-title {
  display: block;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.reminder-desc {
  display: block;
  font-size: 26rpx;
  color: #666;
}

/* van-switch组件样式调整 */
.reminder-section van-switch {
  flex-shrink: 0;
  transform: scale(1.2); /* 稍微放大开关 */
}

/* 底部操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 32rpx;
  padding-bottom: calc(32rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  z-index: 999;
}

.edit-btn {
  height: 88rpx;
  border-radius: 44rpx;
  background: #6366f1;
  color: #fff;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  cursor: pointer;
  transition: all 0.3s;
}

.edit-btn text {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
}

.edit-btn:active {
  background: #5856eb;
  transform: scale(0.98);
}

.delete-btn {
  height: 88rpx;
  border-radius: 44rpx;
  background: transparent;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  cursor: pointer;
  transition: all 0.3s;
}

.delete-btn text {
  font-size: 32rpx;
  font-weight: 500;
  color: #ff4d4f;
}

.delete-btn:active {
  background: #fff2f0;
  border-color: #ff7875;
} 