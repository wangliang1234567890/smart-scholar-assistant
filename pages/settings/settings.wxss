/* pages/settings/settings.wxss */

.settings-container {
  min-height: 100vh;
  background: #f5f5f5;
}

.nav-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: #ffffff;
}

.settings-content {
  height: calc(100vh - 88rpx);
  padding: 20rpx;
}

/* 设置分组 */
.settings-section {
  margin-bottom: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  padding: 0 20rpx 16rpx 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  gap: 12rpx;
}

.setting-group {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 设置项 */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item.action-item:active {
  background-color: #f8f9fa;
}

.setting-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.setting-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.setting-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

.setting-value {
  font-size: 28rpx;
  color: #4285F4;
  padding: 8rpx 16rpx;
  background: #f0f8ff;
  border-radius: 8rpx;
  min-width: 120rpx;
  text-align: center;
}

/* 存储统计 */
.storage-stats {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.stats-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.stats-item:last-child {
  border-bottom: none;
}

.stats-label {
  font-size: 28rpx;
  color: #333333;
}

.stats-value {
  font-size: 28rpx;
  color: #4285F4;
  font-weight: 600;
}

/* 退出登录 */
.logout-section {
  margin-top: 40rpx;
  padding: 0 20rpx 40rpx 20rpx;
}

.logout-btn {
  height: 88rpx !important;
  border-radius: 16rpx !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
}

/* 开关组件样式重写 */
.van-switch {
  transform: scale(0.9);
}

/* 选择器样式 */
picker {
  display: flex;
  align-items: center;
}

/* 响应式适配 */
@media (max-width: 400px) {
  .settings-content {
    padding: 16rpx;
  }
  
  .setting-item {
    padding: 24rpx 20rpx;
  }
  
  .setting-label {
    font-size: 26rpx;
  }
  
  .setting-desc {
    font-size: 22rpx;
  }
  
  .setting-value {
    font-size: 26rpx;
    min-width: 100rpx;
  }
}

/* 深色主题适配 */
@media (prefers-color-scheme: dark) {
  .settings-container {
    background: #1a1a1a;
  }
  
  .nav-header {
    background: #2a2a2a;
  }
  
  .setting-group {
    background: #2a2a2a;
  }
  
  .storage-stats {
    background: #2a2a2a;
  }
  
  .setting-item {
    border-bottom-color: #3a3a3a;
  }
  
  .stats-item {
    border-bottom-color: #3a3a3a;
  }
  
  .setting-label {
    color: #ffffff;
  }
  
  .setting-desc {
    color: #cccccc;
  }
  
  .stats-label {
    color: #ffffff;
  }
  
  .section-title {
    color: #ffffff;
  }
} 