/* pages/settings/settings.wxss */

.settings-container {
  min-height: 100vh;
  background: #F8FAFC;
}

.settings-content {
  height: calc(100vh - 88rpx);
  padding: 24rpx;
}

/* 设置分组 */
.settings-section {
  margin-bottom: 32rpx;
}

/* 分组标题 */
.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}

.section-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  background: #4F46E5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.section-icon-purple {
  background: #8B5CF6;
}

.section-icon-green {
  background: #10B981;
}

.section-icon-orange {
  background: #F59E0B;
}

.icon-text {
  font-size: 24rpx;
  line-height: 1;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
}

/* 设置组 */
.settings-group {
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

/* 设置项 */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid #F3F4F6;
  min-height: 80rpx;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background-color: #F9FAFB;
}

.setting-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.setting-label {
  font-size: 32rpx;
  font-weight: 500;
  color: #1F2937;
  line-height: 1.4;
}

.setting-desc {
  font-size: 26rpx;
  color: #6B7280;
  line-height: 1.3;
}

.setting-right {
  display: flex;
  align-items: center;
}

.setting-value {
  font-size: 32rpx;
  color: #4F46E5;
  font-weight: 500;
  padding: 12rpx 20rpx;
  background: #EEF2FF;
  border-radius: 12rpx;
  min-width: 100rpx;
  text-align: center;
}

/* 清理按钮 */
.clear-btn {
  background: #4F46E5;
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 500;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  text-align: center;
  min-width: 80rpx;
}

.clear-btn:active {
  background: #4338CA;
}

/* 应用信息 */
.app-info {
  background: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
  padding: 48rpx 24rpx;
  margin-top: 32rpx;
  margin-bottom: 32rpx;
  text-align: center;
}

.app-logo {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 24rpx auto;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
}

.logo-text {
  font-size: 64rpx;
  line-height: 1;
}

.app-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.app-version {
  font-size: 28rpx;
  color: #4F46E5;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.app-copyright {
  font-size: 24rpx;
  color: #9CA3AF;
  line-height: 1.4;
}

/* 开关组件样式 */
.van-switch {
  transform: scale(1.1);
}

/* picker样式 */
picker {
  display: block;
}

/* 响应式适配 */
@media (max-width: 400px) {
  .settings-content {
    padding: 16rpx;
  }
  
  .setting-item {
    padding: 24rpx 20rpx;
    min-height: 72rpx;
  }
  
  .section-title {
    font-size: 28rpx;
  }
  
  .setting-label {
    font-size: 28rpx;
  }
  
  .setting-desc {
    font-size: 24rpx;
  }
  
  .setting-value {
    font-size: 28rpx;
    padding: 10rpx 16rpx;
  }
  
  .app-name {
    font-size: 36rpx;
  }
  
  .app-version {
    font-size: 26rpx;
  }
  
  .logo-text {
    font-size: 56rpx;
  }
}

/* 深色主题适配 */
@media (prefers-color-scheme: dark) {
  .settings-container {
    background: #111827;
  }
  
  .settings-group {
    background: #1F2937;
    box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.3);
  }
  
  .app-info {
    background: #1F2937;
    box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.3);
  }
  
  .setting-item {
    border-bottom-color: #374151;
  }
  
  .setting-item:active {
    background-color: #374151;
  }
  
  .section-title {
    color: #F9FAFB;
  }
  
  .setting-label {
    color: #F9FAFB;
  }
  
  .setting-desc {
    color: #D1D5DB;
  }
  
  .app-name {
    color: #F9FAFB;
  }
  
  .app-copyright {
    color: #9CA3AF;
  }
} 