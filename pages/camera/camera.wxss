/* pages/camera/camera.wxss */

.page-container {
  height: 100vh;
  background: #F8FAFC;
  position: relative;
  overflow: hidden;
}

/* AI分析界面 */
.analyzing-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: #F8FAFC;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.analyzing-content {
  width: 100%;
  max-width: 600rpx;
  text-align: center;
}

.analyzing-preview {
  margin-bottom: 60rpx;
}

.preview-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.analyzing-progress {
  margin-bottom: 40rpx;
}

.progress-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 16rpx;
}

.progress-desc {
  font-size: 28rpx;
  color: #6B7280;
  margin-bottom: 32rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #E5E7EB;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4F46E5 0%, #7C3AED 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-percent {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-top: 16rpx;
}

.error-container {
  margin-top: 40rpx;
  text-align: center;
}

.error-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.error-message {
  font-size: 28rpx;
  color: #EF4444;
  margin-bottom: 32rpx;
}

.error-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.error-btn {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}

.retry-btn {
  background: #4F46E5;
  color: white;
}

.reset-btn {
  background: #6B7280;
  color: white;
}

/* 确认题目页面 */
.preview-container {
  padding: 32rpx;
  height: 100vh;
  overflow-y: auto;
  background: #F8FAFC;
}

.preview-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding-top: 20rpx;
}

.preview-title {
  font-size: 44rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 12rpx;
}

.preview-subtitle {
  font-size: 28rpx;
  color: #6B7280;
}

.recognition-result {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
}

.result-confidence {
  display: flex;
  align-items: center;
}

.confidence-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
  color: white;
}

.confidence-badge.high {
  background: #10B981;
}

.confidence-badge.medium {
  background: #F59E0B;
}

.confidence-badge.low {
  background: #EF4444;
}

.result-content {
  position: relative;
}

.question-input {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background: #F9FAFB;
  color: #1F2937;
}

.question-input:focus {
  border-color: #4F46E5;
  background: white;
}

.input-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 12rpx;
}

.char-count {
  font-size: 24rpx;
  color: #9CA3AF;
}

.image-preview {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.image-header {
  font-size: 28rpx;
  font-weight: 500;
  color: #1F2937;
  margin-bottom: 20rpx;
}

.preview-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 12rpx;
  background: #F3F4F6;
}

.question-settings {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.settings-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 24rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F3F4F6;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #1F2937;
}

.setting-value {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #6B7280;
}

.description-input {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.input-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #1F2937;
  margin-bottom: 16rpx;
}

.description-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid #E5E7EB;
  border-radius: 12rpx;
  font-size: 26rpx;
  background: #F9FAFB;
  color: #1F2937;
}

.description-textarea:focus {
  border-color: #4F46E5;
  background: white;
}

.preview-actions {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx 40rpx;
}

.preview-actions .van-button {
  flex: 1;
}

/* 相机页面 */
.camera-container {
  position: relative;
  height: 100vh;
  background: #000;
}

/* 相机页面锁定容器 - 防止滑动 */
.camera-lock-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  z-index: 1000;
  background: #000;
}

.camera-navbar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.5) 0%, transparent 100%);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  padding-top: var(--status-bar-height, 44rpx);
  z-index: 10;
}

.navbar-left,
.navbar-right {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
}

.navbar-center {
  flex: 1;
  text-align: center;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 500;
  color: white;
}

.camera-view {
  width: 100%;
  height: 100%;
}

.camera-frame {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  height: 400rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  }
  
.frame-corner {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border: 6rpx solid #4F46E5;
  }
  
.frame-corner.top-left {
  top: -6rpx;
  left: -6rpx;
  border-right: none;
  border-bottom: none;
  border-radius: 20rpx 0 0 0;
  }
  
.frame-corner.top-right {
  top: -6rpx;
  right: -6rpx;
  border-left: none;
  border-bottom: none;
  border-radius: 0 20rpx 0 0;
  }
  
.frame-corner.bottom-left {
  bottom: -6rpx;
  left: -6rpx;
  border-right: none;
  border-top: none;
  border-radius: 0 0 0 20rpx;
  }
  
.frame-corner.bottom-right {
  bottom: -6rpx;
  right: -6rpx;
  border-left: none;
  border-top: none;
  border-radius: 0 0 20rpx 0;
  }

.camera-tips {
  position: absolute;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  background: rgba(0, 0, 0, 0.6);
  padding: 24rpx 40rpx;
  border-radius: 40rpx;
  backdrop-filter: blur(10rpx);
}

.tip-text {
  font-size: 28rpx;
  color: white;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.tip-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.camera-controls {
  position: absolute;
  bottom: 80rpx;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 80rpx;
}

.control-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.control-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
}

.control-text {
  font-size: 20rpx;
  color: white;
  opacity: 0.8;
}

.capture-button {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 6rpx solid white;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.capture-inner {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #4F46E5;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.capture-button:active .capture-inner {
  transform: scale(0.9);
}

/* 选择器样式 */
.picker-content {
  padding: 40rpx 32rpx;
}

.picker-header {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  text-align: center;
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #E5E7EB;
}

.picker-options {
  max-height: 600rpx;
  overflow-y: auto;
}

.picker-option {
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #1F2937;
  border-radius: 12rpx;
  margin-bottom: 8rpx;
  transition: all 0.2s ease;
}

.picker-option:active {
  background: #F3F4F6;
}

.picker-option.selected {
  background: #EEF2FF;
  color: #4F46E5;
  font-weight: 500;
}

/* 结果弹窗样式 */
.result-modal-content {
  padding: 32rpx;
}

.modal-section {
  margin-bottom: 32rpx;
}

.modal-section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 16rpx;
}

.section-content {
  font-size: 26rpx;
  line-height: 1.6;
  color: #4B5563;
  background: #F9FAFB;
  padding: 20rpx;
  border-radius: 12rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.knowledge-tag {
  background: #EEF2FF;
  color: #4F46E5;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .analyzing-container {
    padding: 40rpx 24rpx 32rpx;
}

  .preview-container {
    padding: 24rpx;
  }
  
  .camera-controls {
    padding: 0 60rpx;
  }
}

/* 加载动画 */
@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
  }
  
.step-icon van-icon[name="loading"] {
  animation: rotate 1s linear infinite;
}

/* 渐变动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
  }
  
.step-item.active {
  animation: fadeIn 0.3s ease-out;
}

/* 调试按钮样式 */
.debug-actions {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}

.debug-btn {
  font-size: 24rpx !important;
  padding: 10rpx 20rpx !important;
  border-radius: 10rpx !important;
}

/* AI分析结果样式 */
.analysis-result {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 32rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.analysis-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.analysis-title::before {
