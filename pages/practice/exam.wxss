/* AI智能练习页面样式 */
.exam-container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding-bottom: 40rpx;
}

/* 页面标题 */
.page-header {
  text-align: center;
  padding: 50rpx 0 30rpx;
  background: white;
}

.page-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

/* 加载状态卡片 */
.loading-card {
  margin: 24rpx;
  text-align: center;
  padding: 80rpx 32rpx;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 试卷信息卡片 */
.exam-info-card {
  margin: 24rpx;
}

.card-header {
  text-align: center;
  margin-bottom: 32rpx;
}

.card-title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.card-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
  filter: brightness(0) saturate(100%) invert(39%) sepia(87%) saturate(1475%) hue-rotate(202deg) brightness(92%) contrast(90%);
}

.card-subtitle {
  font-size: 28rpx;
  color: #666;
}

.exam-stats {
  display: flex;
  justify-content: space-around;
  padding: 24rpx 0;
  border-top: 1rpx solid #f0f0f0;
  margin-top: 24rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #4A90E2;
}

.stat-label {
  font-size: 24rpx;
  color: #888;
}

/* 操作按钮卡片 */
.action-card {
  margin: 24rpx;
}

.action-buttons {
  display: flex;
  justify-content: space-around;
  gap: 16rpx;
}

.action-btn-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border-radius: 16rpx;
  background-color: #f8f9fa;
  border: 2rpx solid #f0f0f0;
  flex: 1;
  transition: all 0.3s ease;
}

.action-btn-item.primary {
  background: linear-gradient(135deg, #4A90E2 0%, #357abd 100%);
  border-color: #4A90E2;
}

.action-btn-item.primary .action-btn-icon,
.action-btn-item.primary .action-btn-text {
  color: white;
}

.action-btn-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  transition: transform 0.3s ease;
}

.action-btn-icon.active {
  color: #4A90E2;
  transform: scale(1.1);
}

.action-btn-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  line-height: 1.2;
}

/* 试卷主体 */
.exam-body {
  margin-top: 8rpx;
}

.section-card {
  margin: 24rpx;
  margin-bottom: 32rpx;
}

.section-header {
  padding-bottom: 20rpx;
  margin-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.section-info {
  font-size: 26rpx;
  color: #666;
}

.questions-list {
  padding: 0;
}

.question-item {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background-color: #fafbfc;
  border-radius: 12rpx;
  border: 1rpx solid #f0f0f0;
}

.question-item:last-child {
  margin-bottom: 0;
}

.question-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
  gap: 16rpx;
}

.question-number {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357abd 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.question-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.question-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}

.question-score {
  font-size: 22rpx;
  color: #888;
}

/* 选择题选项 */
.question-options {
  margin-top: 16rpx;
  padding-left: 64rpx;
}

.option-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
  padding: 16rpx 20rpx;
  background-color: white;
  border-radius: 12rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.option-item.correct {
  background-color: #f0f9ff;
  border-color: #4A90E2;
}

.option-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  flex: 1;
}

.correct-mark {
  color: #4A90E2;
  font-size: 28rpx;
  font-weight: bold;
}

/* 答题区域 */
.answer-area {
  margin-top: 16rpx;
  padding-left: 64rpx;
}

.answer-input-line {
  height: 2rpx;
  background-color: #333;
  margin: 24rpx 0;
  border-radius: 1rpx;
}

.answer-input-area {
  margin: 24rpx 0;
}

.answer-line {
  height: 2rpx;
  background-color: #ddd;
  margin: 24rpx 0;
  border-radius: 1rpx;
}

.answer-area.large .answer-line {
  margin: 32rpx 0;
}

.correct-answer {
  display: flex;
  flex-wrap: wrap;
  align-items: baseline;
  gap: 8rpx;
  margin-top: 16rpx;
  padding: 16rpx;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  border-radius: 12rpx;
  border-left: 4rpx solid #4A90E2;
}

.answer-label {
  font-size: 26rpx;
  color: #4A90E2;
  font-weight: 600;
}

.answer-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

/* 题目解析 */
.question-explanation {
  margin-top: 20rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
  border-radius: 12rpx;
  border-left: 4rpx solid #f59e0b;
}

.explanation-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  gap: 8rpx;
}

.explanation-icon {
  font-size: 24rpx;
}

.explanation-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #92400e;
}

.explanation-content {
  font-size: 26rpx;
  color: #92400e;
  line-height: 1.6;
}

/* 打印模式操作 */
.print-actions {
  margin: 24rpx;
  display: flex;
  gap: 24rpx;
}

.print-btn {
  flex: 1;
  height: 88rpx !important;
  border-radius: 44rpx !important;
  font-size: 32rpx !important;
}

/* 错误状态卡片 */
.error-card {
  margin: 24rpx;
  text-align: center;
  padding: 80rpx 32rpx;
}

.error-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.error-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.6;
}

.error-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.error-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.retry-btn {
  width: 200rpx !important;
  height: 80rpx !important;
  border-radius: 40rpx !important;
  font-size: 28rpx !important;
}

/* 隐藏的canvas */
.hidden-canvas {
  position: fixed;
  top: -9999rpx;
  left: -9999rpx;
  width: 750rpx;
  height: 1000rpx;
}

/* 打印模式样式 */
.print-mode {
  margin: 0;
}

.print-mode .exam-info-card,
.print-mode .section-card {
  margin: 0;
  margin-bottom: 20rpx;
  box-shadow: none;
  border: 1rpx solid #eee;
}

.print-mode .card-title {
  font-size: 32rpx;
}

.print-mode .question-text {
  font-size: 26rpx;
}

.print-mode .option-text {
  font-size: 24rpx;
}

.print-mode .question-item {
  background-color: #fcfcfc;
  border: 1rpx solid #f0f0f0;
}

/* 响应式优化 */
@media (max-width: 375px) {
  .exam-stats {
    padding: 20rpx 0;
  }
  
  .stat-value {
    font-size: 28rpx;
  }
  
  .action-buttons {
    gap: 12rpx;
  }
  
  .action-btn-item {
    padding: 20rpx 12rpx;
  }
  
  .action-btn-text {
    font-size: 22rpx;
  }
}